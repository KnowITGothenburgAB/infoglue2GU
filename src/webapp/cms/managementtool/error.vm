<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "DTD/xhtml1-strict.dtd">

<html>
  <head>
    <link rel="stylesheet" type="text/css" href="css/cms.css"/>
    <title>$error.getName()</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  </head>
  <body>
    <table>
      <tr>
        <td><img src="images/error.gif" alt="error"/></td>
        <td><p>##$error.getName()</p></td>
      </tr><tr>
        <td colspan="2"><hr/></td>
      </tr>
    </table>
    
    <table>
      <tr>
        <td>
          <table>
            <tr>
              <td><b>Message:</b></td>
              <td>$error.getMessage()</td>
            </tr>
            <tr>
              <td valign="top"><b>Stack trace:</b></td>
              <td>$error.getStackTrace()</td>
            </tr>
            #if($error.hasCause())
            <tr>
              <td>Nested message:</td>
              <td>$error.getCauseMessage()</td>
            </tr>
            <tr>
              <td>Nested stack trace:</td>
              <td>$error.getCauseStackTrace()</td>
            </tr>
            #end
          </table>
        </td>
      </tr>
    </table>
  </body>
</table>