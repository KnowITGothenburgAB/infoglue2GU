#beginLightCommonToolV3Impl("tool.mydesktoptool.ongoingWorkflows" "" "" false true $!disableCloseButton $headerMarkup)

	##lightMenuToolbar("" $buttons $rightButtons) 

	<div style="clear: both;"></div>
	
	<div id="igEditArea" class="igScrollArea" onfocus="this.blur();">
	
	<h3>$ui.getString("tool.mydesktoptool.welcomeHeader")</h3>

	<p>$ui.getString("tool.mydesktoptool.welcomeText")</p>	
			
	<div id="layoutWrapper">
		
		<div id="work">
		
			<div id="expiringContents" class="box">
				<div class="boxHeader"><span>Expiring contents</span></div>
				#set($size = 0)
				#foreach($contentVO in $expiringContentsForPrincipal)
					#if($velocityCount < 5)
					<a href="#"	onclick="top.openUrlInWorkArea('ViewContent!V3.action?contentId=$contentVO.id', '$contentVO.name', 'content');">$contentVO.name</a>
					#end
					#set($size = $size + 1)
				#end
				#if($size == 0)
					<p>$ui.getString("tool.mydesktoptool.noActiveWorkflows")</p>
				#end
			</div>

			<div id="expiringPages" class="box">
				<div class="boxHeader"><span>Expiring pages</span></div>
				#set($size = 0)
				#foreach($siteNodeVO in $expiringPagesForPrincipal)
					#if($velocityCount < 5)
					<a href="#"	onclick="top.openUrlInWorkArea('ViewSiteNode.action?siteNodeId=$siteNodeVO.id', '$siteNodeVO.name', 'structure');">$siteNodeVO.name</a>
					#end
					#set($size = $size + 1)
				#end
				#if($size == 0)
					<p>$ui.getString("tool.mydesktoptool.noActiveWorkflows")</p>
				#end
			</div>
		
			<div id="yourContents" class="box">
				<div class="boxHeader"><span>Your contents</span></div>
				#set($size = 0)
				#foreach($contentVO in $contentVOListLastModifiedByPincipal)
					#if($velocityCount < 5)
					<a href="#"	onclick="top.openUrlInWorkArea('ViewContent!V3.action?contentId=$contentVO.id', '$contentVO.name', 'content');">$contentVO.name</a>
					#end
					#set($size = $size + 1)
				#end
				#if($size == 0)
					<p>$ui.getString("tool.mydesktoptool.noActiveWorkflows")</p>
				#end
			</div>

			<div id="yourPages" class="box">
				<div class="boxHeader"><span>Your pages</span></div>
				#set($size = 0)
				#foreach($siteNodeVO in $siteNodeVOListLastModifiedByPincipal)
					#if($velocityCount < 5)
					<a href="#"	onclick="top.openUrlInWorkArea('ViewSiteNode.action?siteNodeId=$siteNodeVO.id', '$siteNodeVO.name', 'structure');">$siteNodeVO.name</a>
					#end
					#set($size = $size + 1)
				#end
				#if($size == 0)
					<p>$ui.getString("tool.mydesktoptool.noActiveWorkflows")</p>
				#end
			</div>
			
			<div id="activeWorkflows" class="box">
				<div class="boxHeader"><span>$ui.getString("tool.mydesktoptool.ongoingWorkflows")</span></div>
				#set($cnt = 0)
				#foreach ($workflowVO in $workflowVOList)
					#set($action = "")
					#foreach ($workflowActionVO in $workflowVO.globalActions)
						#set($iconUrl = $workflowActionVO.metaAttributes.get("icon"))
						#set($viewGlobalAction = $workflowActionVO.getView())
						#if($viewGlobalAction == "")
							#set($viewGlobalAction = "ViewMyDesktopToolStartPage!invoke.action")
						#end
						#set($viewGlobalAction = "$quote$viewGlobalAction$quote")
						#set($action = "$!action <a href='javascript:invokeWorkflowView($workflowActionVO.getWorkflowId(), $workflowActionVO.getId(), $viewGlobalAction);'><img src='$iconUrl' border='0' width='15' height='15' alt='$workflowActionVO.getName()'/></a>")
					#end
	
					#set($view = "$quote$workflowVO.getView()$quote")				
					#if($workflowVO.getTitle())
					  	#set($fullTitle = "$workflowVO.getName() - $workflowVO.getTitle()")
						#set($visibleTitle = $fullTitle)
						#if($fullTitle.length() > 40)
							#set($visibleTitle = "$fullTitle.substring(0,37)...")
						#end
					#else
						#set($fullTitle = "$workflowVO.getName()")
						#set($visibleTitle = $fullTitle)
						#if($fullTitle.length() > 40)
							#set($visibleTitle = "$fullTitle.substring(0,37)...")
						#end
					#end
					
					<p>
						<a href="#" onclick="showDiv('activeWorkflow${workflowVO.workflowId}DetailsProperties');"><img src="images/infoWorkflow.gif" border="0" alt="Start workflow"></a>
						<a title="$fullTitle" href="#" onclick="showDiv('activeWorkflow${workflowVO.workflowId}DetailsProperties');">$visibleTitle</a>
						$!action
					</p>
					#set($cnt = $cnt + 1)
				#end
	
				#if($cnt == 0)
					<p>$ui.getString("tool.mydesktoptool.noActiveWorkflows")</p>
				#end
			</div>

		</div>

		<div id="actions">
			<div id="workflows" class="box">
				<div class="boxHeader"><span>$ui.getString("tool.mydesktoptool.availableWorkflows")</span></div>
				#set($cnt = 0)
				#foreach ($availableWorkflowVO in $availableWorkflowVOList)
					#set($view = "$availableWorkflowVO.getView()")
					
					#set($fullTitle = "$availableWorkflowVO.getName()")
					#if($availableWorkflowVO.status == 1)
						#set($fullTitle = "$availableWorkflowVO.name - $availableWorkflowVO.statusMessage")
					#end
					
					#set($visibleTitle = $fullTitle)
					#if($fullTitle.length() > 40)
						#set($visibleTitle = "$fullTitle.substring(0,37)...")
					#end
					
					<p>
					#if($availableWorkflowVO.status == 0)
						<a href="#" onclick="showDiv('availableWorkflow${availableWorkflowVO.name}DetailsProperties');"><img src="images/infoWorkflow.gif" border="0" alt="Workflow info"></a>
						<a title="$fullTitle" href="ViewMyDesktopToolStartPage!startWorkflow.action?workflowName=$formatter.encodeURI($availableWorkflowVO.getName())">$visibleTitle</a>
						<a href="ViewMyDesktopToolStartPage!startWorkflow.action?workflowName=$formatter.encodeURI($availableWorkflowVO.getName())"><img src="images/startWorkflow.gif" border="0" alt="Start workflow"></a>
					#else
						<a href="#" onclick="showDiv('availableWorkflow${availableWorkflowVO.name}DetailsProperties');"><img src="images/infoWorkflow.gif" border="0" alt="Workflow info"></a>
						<a title="$fullTitle" style="color:red">$visibleTitle</a>
					#end
					</p>
					
					#set($cnt = $cnt + 1)
				#end
	
				#if($cnt == 0)
					<p>$ui.getString("tool.mydesktoptool.noWorkflows")</p>
				#end
			</div>
			<div id="shortcuts" class="box">
				<div class="boxHeader"><span>$ui.getString("tool.mydesktoptool.availableShortcuts")</span></div>
				#set($cnt = 0)
				#foreach($availableShortcutVO in $availableShortcutVOList)
					#set($view = "'$availableShortcutVO.getView()'")
					
					#set($fullTitle = $availableShortcutVO.getName())
					#set($visibleTitle = $fullTitle)
					#if($fullTitle.length() > 40)
						#set($visibleTitle = "$fullTitle.substring(0,37)...")
					#end
	
					<p>
						<a href="#" onclick="showDiv('availableShortcut${availableShortcutVO.name}DetailsProperties');"><img src="images/infoWorkflow.gif" border="0" alt="Start Shortcut"></a>
						<a title="$fullTitle" href="$availableShortcutVO.getURL()" #if($availableShortcutVO.popup == true)target="_blank"#end>$visibleTitle</a>
						<a href="$availableShortcutVO.getURL()" #if($availableShortcutVO.popup == true)target="_blank"#end><img src="images/startWorkflow.gif" border="0" alt="Start workflow"></a>
					</p>
					#set($cnt = $cnt + 1)
				#end
	
				#if($cnt == 0)
					<p>$ui.getString("tool.mydesktoptool.noShortcuts")</p>
				#end
			</div>
		</div>
	
