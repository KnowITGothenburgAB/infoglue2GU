<body class="generaltooledit" style="padding: 0px; margin: 0px; width: 650px;">

<div id="assets" class="imgBoxContainer">

#set($counter = 0)
#foreach($digitalAsset in $inheritedDigitalAssets)

	<div class="imgBox">
    	<div class="imgBoxTop" id="digitalAsset$formatter.encodeURI($digitalAsset.assetKey, 'utf-8')" #if($assetKey == "$digitalAsset.assetKey") style="background-color: #C2D0E2;" #else style="background-color: white;" #end>
            <div id="imgBoxTopInner" class="imgBoxTopInner">
            	<input type="hidden" id="digitalAsset$formatter.encodeURI($formatter.encodeURI($digitalAsset.assetKey, 'utf-8'), 'utf-8')" value="$this.getDigitalAssetUrl($digitalAsset.digitalAssetId)">
				#set($trippleEncodedAssetKey = "$formatter.encodeURI($formatter.encodeURI($formatter.encodeURI($digitalAsset.assetKey, 'utf-8'), 'utf-8'), 'utf-8')")
				#set($doubleEncodedAssetKey = "$formatter.encodeURI($formatter.encodeURI($digitalAsset.assetKey, 'utf-8'), 'utf-8')")
				#set($thumbnailImageUrl = "$this.getDigitalAssetThumbnailUrl($digitalAsset.digitalAssetId, 100, 60, 'ffffff', 'center', 'middle', 100, 60, 75)")
				<img ondblclick="onOk();" onclick="javascript:markAsset(this, $!contentId, '$doubleEncodedAssetKey', '$doubleEncodedAssetKey', '$thumbnailImageUrl');" src="$thumbnailImageUrl" alt="$digitalAsset.assetKey" />
             	<p title="$digitalAsset.assetKey" class="assetKeyP"><a class="assetKeyHref" ondblclick="onOk();" href="javascript:markAsset(this, $!contentId, '$doubleEncodedAssetKey', '$doubleEncodedAssetKey', '$thumbnailImageUrl');">#if($digitalAsset.assetKey.length() > 18)$digitalAsset.assetKey.substring(0,18)..#else$digitalAsset.assetKey#end</a></p>
                #if($showSelectButtonByEachImage)<a href="javascript:markAsset(this, $!contentId, '$doubleEncodedAssetKey', '$doubleEncodedAssetKey', '$thumbnailImageUrl');onOk();"><b>Add asset to selection</b></a>#end
				#if($assetKey == $digitalAsset.assetKey)
					<script type="text/javascript">
					<!--
						firstAssetKey = '$formatter.encodeURI($digitalAsset.assetKey, 'utf-8')';
					-->
					</script>	
				#else
					#if($counter == 0 && (!$assetKey || $!assetKey == ''))
						<script type="text/javascript">
						<!--
							firstAssetKey = '$formatter.encodeURI($digitalAsset.assetKey, 'utf-8')';
						-->
						</script>
					#end
				#end
				#set($counter = $counter + 1)
            </div>
        </div>
	  	<div class="imgBoxBottom">
        	<a href="#" class="editImg"></a>
        	<a href="#" class="refreshImg"></a>
        	<a href="#" class="deleteImg"></a>
   		</div>
 	</div>

#end
</div>

<div style="display: block; float: left; width: 100%; height: 20px;" >
#if($counter == 0)
<p>
	$ui.getString("tool.contenttool.noAssetsOrNoContentSelectedLabel")
</p>
#end

#if($contentVersionVO.id)
	<p id="igMenuButton"><a class='igButton' href="#" onclick="openPopup('ViewDigitalAsset.action?contentVersionId=$contentVersionVO.id', 'DigitalAsset', 'width=400,height=200,resizable=no');"><span class='igButtonOuterSpan'><span class='linkInfoGlueFunctions'>$ui.getString("tool.contenttool.uploadNewAttachment")</span></span></a></p>
#end

#if($showActionButtons)
	<p id="igMenuButton"><a class='igButton' href="#" onclick="onOk();"><span class='igButtonOuterSpan'><span class='linkInfoGlueFunctions'>Infoga markerad fil</span></span></a></p>
#end

