	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	
	<script type="text/javascript" language="Javascript">

		function showWorking()
		{
			var p = parent.frames["toolbar"].document.getElementById("progress");
			p.style.visibility = "visible";
			// alert("saving");
		}
		function reloadMenu(selectBox)
		{
			repositoryId = selectBox.value;
			if(repositoryId != "")
			{
				showWorking();
				//alert("top:" + top);
			    parent.frames[2].location.href = "ViewPublications.action?repositoryId=" + repositoryId;
	   			selectBox.value = "beg";		    
			}
		}

	</script>
	
	<link rel="stylesheet" type="text/css" href="css/cms.css" /> 
</head>

<body class="publishingtool">

<table border="0" class="publishingtool" cellspacing="0" cellpadding="0" width="100%" height="100%">
<form name="selectbox" method="POST" action="">
<tr>
	<td bgcolor="#FFFFFF"><image src="images/trans.gif" width="1" height="1"></td>
	<td colspan="7"><image src="images/trans.gif" width="1" height="10"></td>
