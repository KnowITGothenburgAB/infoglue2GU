</tr>
<tr>
	<td bgcolor="#FFFFFF"><image src="images/trans.gif" width="1" height="1"></a>
	<td class="toolheader"><image src="images/$ui.getString("images.publishingtool.repositoryLabel")" width="70" height="19"></td> 
	<td>
  		<select size="1" name="repositoryId" class="sitedropbox" onChange="javascript:reloadMenu(this);">
		    #if ($repositories.size() > 1)
		    	<option value="beg" selected>$ui.getString("tool.publishingtool.chooseRepositoryLabel")</option>
		    #end
		    <!--option value="0">All repositories</option--> <!-- not yet -->
		    #foreach ($repositoryVO in $repositories)
		    <option value="$repositoryVO.getRepositoryId()">$repositoryVO.getName()</option>
		    #end
		</select>
	</td>
	<td class="toolheader"><image src="images/trans.gif" width="10" height="19"></td>
