###############################################################################
project.version=2.0
deploy.dir=D:/java/tomcat41/webapps/infoglueCMS

##
# database
##
database.driver.class=com.mysql.jdbc.Driver
#database.driver.class=net.sourceforge.jtds.jdbc.Driver
datbase.url=jdbc:mysql://localhost/infoglue003Auth?autoReconnect=true
#database.url=jdbc:jtds:sqlserver://formedia1:1433/infoglue001;SelectMethod=Cursor
database.user=root
database.password=

##
# web-specific settings (to locate images, etc.)
##
webServerAddress=http://localhost:8080
context.root=infoglueCMS2Dev
context.root.deliver=infoglueDeliver2Dev
digitalAssetPath=c:/Sprawl/projects/InfoGlue/cms/webapps/digitalAssets

##
# logging
##
logToConsole=true
logToFile=false
logLevel=WARNING
logPath=c:/Sprawl/projects/InfoGlue/cms/webapps/logs/cmstool.log

##
# default tree
##
tree=html

##
# Tool DB-Server
##
masterServer=dev.frovi.org

##
# Live DB-Server
##
slaveServer=dev2.frovi.org

##
# AutoUpdate Settings
# ( Should point to masterserver, which provide a mirror list later
#   For now, point up2dateUrl directly to a xml updates list )
##
up2dateUrl=http://www.infoglue.org/infoglueDeliver/ViewPage.action?siteNodeId=23

##
# mail
##
mail.smtp.host=mail.sprawlsolutions.se
mail.smtp.auth=false
mail.smtp.user=
mail.smtp.password=
systemEmailSender=mattias.bogeblad@sprawlsolutions.se

##
# operating mode 0=working(first preview), 2=publish(staging preview), 3=published(live)
##
operatingMode=0

##
# Sets up a superuser
##
administratorUserName=root
administratorPassword=sprawl
administratorEmail=mattias.bogeblad@sprawlsolutions.se

#################################
# security settings - basic
#################################
loginUrl=Login.action
invalidLoginUrl=Login!invalidLogin.action
authenticatorClass=org.infoglue.cms.security.InfoGlueBasicAuthenticationModule
authorizerClass=org.infoglue.cms.security.InfoGlueBasicAuthorizationModule
serverName=localhost:8080
authConstraint=cmsUser
extraParametersFile=InfoGlueAuthorizationParameters.properties
casValidateUrl=
casServiceUrl=
