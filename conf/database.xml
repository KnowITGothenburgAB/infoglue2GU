<!DOCTYPE databases PUBLIC "-//EXOLAB/Castor JDO Configuration DTD Version 1.0//EN" "http://castor.exolab.org/jdo-conf.dtd">

<database name="INFOGLUE_CMS" engine="mysql">
	<data-source class-name="org.apache.commons.dbcp.BasicDataSource">
	  <params driver-class-name="@database.driver.class@"
		  		username="@database.user@"
		  		password="@database.password@"
		  		url="@database.url@"
		  		max-active="@database.maxConnections@"
		  		connection-properties="useUnicode=@database.use.unicode@;characterEncoding=@database.encoding@"/>
	</data-source>
	<mapping href="classes/mapping.xml"/>
</database>
