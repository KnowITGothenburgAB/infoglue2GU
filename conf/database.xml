<!DOCTYPE databases PUBLIC "-//EXOLAB/Castor JDO Configuration DTD Version 1.0//EN" "http://castor.exolab.org/jdo-conf.dtd">

<database name="INFOGLUE_CMS" engine="mysql">
    <driver class-name="@database.driver.class@" url="@database.url@">
      <param name="user" value="@database.user@"/>
      <param name="password" value="@database.password@"/>
      <param name="autoReconnect" value="true"/>
      <param name="useUnicode" value="@database.use.unicode@"/>
      <param name="characterEncoding" value="@database.encoding@"/>
    </driver>
    <mapping href="classes/mapping.xml"/>
</database>

