<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="infoglue" default="copy-templates" basedir=".">

	<property file="build.properties"/>
	<property name="project.fullname" value="InfoGlue content management system"/>

	<property name="src" value="src"/>
	<property name="src.java" value="${src}/java"/>
	<property name="lib" value="lib"/>
	<property name="conf" value="conf"/>

	<property name="webapp" value="${src}/webapp"/>

	<!--
	Copy over all templates for development
	-->
	<target name="copy-templates" depends="copy-cms,copy-working,copy-preview,copy-live">
	</target>

	<target name="copy-cms">
		<copy todir="${deploy.dir.cms}" >
			<fileset dir="${webapp}"/>
		</copy>
	</target>

	<target name="copy-working">
		<copy todir="${deploy.dir.working}" >
			<fileset dir="${webapp}"/>
		</copy>
	</target>

	<target name="copy-preview">
		<copy todir="${deploy.dir.preview}" >
			<fileset dir="${webapp}"/>
		</copy>
	</target>

	<target name="copy-live">
		<copy todir="${deploy.dir.live}" >
			<fileset dir="${webapp}"/>
		</copy>
	</target>

</project>
